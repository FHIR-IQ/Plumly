{
  "name": "@plumly/evaluator",
  "version": "0.1.0",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:ci": "jest --coverage",
    "evaluate": "node dist/cli.js",
    "evaluate:all": "node dist/cli.js -o evaluation-report.md",
    "evaluate:fixture": "node dist/cli.js -f",
    "test:performance": "node dist/cli.js --verbose"
  },
  "bin": {
    "plumly-evaluate": "./dist/cli.js"
  },
  "dependencies": {
    "@plumly/fhir-utils": "file:../fhir-utils",
    "@plumly/summarizer": "file:../summarizer"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/jest": "^29",
    "jest": "^29",
    "ts-jest": "^29",
    "eslint": "^8"
  }
}